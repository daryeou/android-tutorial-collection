<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Tutorial_Collection.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppWidgetContainer">

    <TextView
        android:id="@+id/titleWidgetTextView"
        style="@style/Widget.Tutorial_Collection.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/lemonfox_app_widget"
        android:text="@string/lemonfox_appwidget_text"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleWidgetTextView"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="7dp"
        android:onClick="onClickChart"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/testImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineChart"
        android:src="@drawable/image_chart"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="7dp"
        android:onClick="onClickChart"
        android:visibility="gone"
        />

</RelativeLayout>